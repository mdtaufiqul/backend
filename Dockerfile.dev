FROM node:20-alpine

WORKDIR /app

# Install dependencies needed for build (e.g. openssl for Prisma)
RUN apk add --no-cache openssl

COPY package*.json ./

RUN npm install

# Copy source code
COPY . .

# Generate Prisma Client
RUN DATABASE_URL="postgresql://postgres:postgres@localhost:5432/mediflow" npx prisma generate

EXPOSE 3001

CMD ["npm", "run", "start:dev"]
